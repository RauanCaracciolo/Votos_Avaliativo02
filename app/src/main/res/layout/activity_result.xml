<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado!"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvResultado01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Resultado 01"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResultado" />

    <TextView
        android:id="@+id/tvResultado02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado 02"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResultado01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvResultado03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado 03"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResultado02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvResultado04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado 04"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvResultado03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:textAlignment="center" />
</androidx.constraintlayout.widget.ConstraintLayout>